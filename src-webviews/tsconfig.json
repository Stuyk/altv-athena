{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "typeRoots": ["../node_modules/@altv"],
        "target": "es5",
        "module": "commonjs",
        "jsx": "preserve",
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@utility/*": ["src/utility/*"],
            "@components/*": ["src/components/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": [
        "../src/core/server/**",
        "../src/core/client/**",
        "../src/core/plugins/**/server/**",
        "../src/core/plugins/**/client/**"
    ]
}
